<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbl.viewstudy.MainActivity"
    android:orientation="vertical"
    >

    <!--<com.sbl.viewstudy.ScrapeView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="300dp" />-->

    <TextView
        android:id="@+id/tv_shape"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:text="======"
        android:gravity="center"
        android:background="@drawable/shape_oval"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <com.sbl.viewstudy.LineStudy
            android:layout_width="100dp"
            android:layout_height="200dp"
            app:paintColor="#f0f"
            app:dotToLeft="50dp"
            />
    </LinearLayout>

    <com.sbl.viewstudy.BackGroundChange
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:bgColor="#f0f" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:text="你好"
        android:textSize="28dp"
        android:gravity="center"
        android:background="@drawable/item_card_white_cor_10"
        />
</LinearLayout>
